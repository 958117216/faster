<launch>

	<arg name="quad"/>
	<arg name="bag"/>
	<arg name="memory"/>

	<node ns="$(arg quad)" name="tip_planner" pkg="acl_planning" type="tip_planner" output="screen" clear_params="true">

        <param name="~use_memory" value="$(arg memory)" type="bool"/>

		<rosparam file="$(find acl_planning)/param/tip.yaml" command="load"/>

		<remap from="~vicon" to="state_estimate"/>
		<remap from="~event" to="event" />
		<remap from="~global_goal" to="global_goal" />
		<remap from="~camera/cloud" to="camera/cloud"/>	

		<remap from="~new_global_goal" to="new_global_goal"/>
		<remap from="~traj" to="traj"/>
		<remap from="~tip_data" to="tip_data"/>
		<remap from="~goal" to="goal" />

	</node>

	<group if="$(arg bag)">
        <!-- Ensure RosBag is saving important data -->
        <node ns="$(arg quad)" pkg="rosbag" type="record" name="rosbag_record_planner" args="-o /media/ubuntu/LOGGER_USB/bags/$(arg quad)PlannerLogFile global_goal int_goal new_global_goal last_global_goal traj event latency speed /tf"/>
    </group>

</launch>